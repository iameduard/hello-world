<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edujimenez.helloworld2.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="718dp"
        android:layout_height="855dp"
        app:srcCompat="@drawable/fondo4_android"
        tools:layout_editor_absoluteY="-133dp"
        tools:layout_editor_absoluteX="-195dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_orig"
        android:text="@string/bienvenido"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="99dp"
        tools:layout_editor_absoluteX="58dp"
        tools:textColor="@android:color/white"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entrar"
        android:background="@android:color/transparent"
        android:textSize="@dimen/btn_lan_text_size_orig"
        tools:textColor="@android:color/white"
        tools:layout_editor_absoluteY="231dp"
        app:layout_constraintRight_toRightOf="@+id/textView3"
