<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edujimenez.helloworld2.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="609dp"
        android:layout_height="962dp"
        android:layout_marginRight="-1dp"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/fondoyyyy_android"
        tools:layout_editor_absoluteY="-3dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.444" />

    <Button
        android:id="@+id/button"
        android:layout_width="199dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:text="@string/entrar"
        android:textSize="@dimen/btn_text_size_orig"
        tools:layout_editor_absoluteY="321dp"
        tools:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.509" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/bienvenido"
        android:textSize="@dimen/text_size_orig"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="97dp"
        tools:textColor="@android:color/white" />
</android.support.constraint.ConstraintLayout>
